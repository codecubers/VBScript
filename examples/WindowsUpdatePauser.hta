    purpose="Pause Windows Update to get more bandwidth, or resume updates"
    caution="Don't forget to resume!"
    scroll="No"
    icon="iesetup.dll"
    border="None"
    innerborder="No"
    SingleInstance="Yes" >
    <script language="VBScript"
        src="src/WindowsUpdatePauser.vbs">
    </script>
    <link rel="stylesheet"
        href="href/WindowsUpdatePauser.css" />
</head>
<body>
    <input type="button" value="Pause" onclick="PauseUpdates()" />
    <input type="button" value="Resume" onclick="ResumeUpdates()" />
    <input type="button" value =" ... " onclick="OpenConfigFile()" />
    <input type="button" value="  x  " onclick="SelfClose()" />
</body>
</html>